<Window x:Class="DersDagitim.Views.TeacherAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Öğretmen Bazlı Ders Atama" WindowState="Maximized" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Blue Header Style (Teachers) -->
        <Style x:Key="BlueHeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
        </Style>

        <!-- Gray Header Style -->
        <Style x:Key="GrayHeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#64748B"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
        </Style>

        <!-- Orange Header Style (Assignments) -->
        <Style x:Key="OrangeHeaderBorder" TargetType="Border">
            <Setter Property="Background" Value="#F97316"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F3F4F6" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. ÖĞRETMENLER (BLUE) -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource BlueHeaderBorder}">
                <TextBlock Text="ÖĞRETMENLER" Style="{StaticResource HeaderText}"/>
            </Border>

            <!-- Search Box -->
            <Border Grid.Row="1" Background="White" Padding="5" BorderBrush="#E5E7EB" BorderThickness="1,0,1,1">
                <TextBox x:Name="TxtSearch" Height="30" Padding="8,4"
                         TextChanged="TxtSearch_TextChanged"
                         Tag="Öğretmen ara...">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="#1E293B"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Öğretmen ara..." Foreground="#94A3B8" Margin="8,0,0,0" FontSize="12"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Öğretmen ara..." Foreground="#94A3B8" Margin="8,0,0,0" FontSize="12"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Border>

            <ListBox x:Name="TeachersList" Grid.Row="2" SelectionChanged="TeachersList_SelectionChanged"
                     BorderThickness="1,0,1,1" BorderBrush="#E5E7EB" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}" Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13" Foreground="#1E293B"/>
                                    <TextBlock Text="{Binding Branch}" FontSize="11" Foreground="#64748B" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Border Grid.Column="1" Background="#DBEAFE" CornerRadius="4" Padding="6,3" VerticalAlignment="Center">
                                    <TextBlock FontSize="11" FontWeight="Bold" Foreground="#1E40AF">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}/{1}">
                                                <Binding Path="TotalAssignedHours"/>
                                                <Binding Path="MaxHours"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- 2. SINIFLAR (GRAY) -->
        <Grid Grid.Column="1" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource GrayHeaderBorder}">
                <TextBlock Text="SINIFLAR" Style="{StaticResource HeaderText}"/>
            </Border>

            <ListBox x:Name="ClassesList" Grid.Row="1" SelectionChanged="ClassesList_SelectionChanged"
                     BorderThickness="1,0,1,1" BorderBrush="#E5E7EB" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}" Padding="6,5">
                            <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="12" Foreground="#1E293B"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- 3. SINIF DERSLERİ (GRAY) -->
        <Grid Grid.Column="2" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource GrayHeaderBorder}">
                <TextBlock x:Name="TxtLessonsHeader" Text="SINIF DERSLERİ" Style="{StaticResource HeaderText}"/>
            </Border>

            <ListBox x:Name="LessonsList" Grid.Row="1"
                     MouseDoubleClick="LessonsList_MouseDoubleClick"
                     BorderThickness="1,0,1,1" BorderBrush="#E5E7EB" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="Card" Style="{StaticResource CardBorder}" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding LessonName}" FontWeight="SemiBold" FontSize="13" Foreground="#1E293B"/>
                                        <TextBlock Text=" - " Foreground="#94A3B8" FontSize="13"/>
                                        <TextBlock Text="{Binding LessonCode}" FontSize="13" Foreground="#64748B"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding BlockPattern, StringFormat='Blok: {0}'}" FontSize="11" Foreground="#94A3B8"/>
                                        <TextBlock Text="  |  " Foreground="#CBD5E1" FontSize="11"/>
                                        <TextBlock Text="{Binding AssignedTeachers}" FontSize="11" Foreground="#6366F1" FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Column="1" Background="#DBEAFE" CornerRadius="4" Padding="8,3" VerticalAlignment="Center" Margin="8,0,8,0">
                                    <TextBlock Text="{Binding TotalHours, StringFormat='{}{0} saat'}" FontSize="11" FontWeight="Bold" Foreground="#1E40AF"/>
                                </Border>

                                <TextBlock x:Name="CheckIcon" Grid.Column="2" Text="✓" FontSize="16" FontWeight="Bold"
                                           Foreground="#10B981" VerticalAlignment="Center" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsAssignedToSelected}" Value="True">
                                <Setter TargetName="Card" Property="Background" Value="#F0FDF4"/>
                                <Setter TargetName="Card" Property="BorderBrush" Value="#86EFAC"/>
                                <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Assign Button -->
            <Border Grid.Row="2" Background="White" Padding="5" BorderBrush="#E5E7EB" BorderThickness="1,0,1,1">
                <Button x:Name="BtnAssign" Content="+ ÖĞRETMEN ATA" Height="34" Click="AssignTeacher_Click"
                        Background="#2563EB" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#94A3B8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>

        <!-- 4. ÖĞRETMEN ATAMALARI (ORANGE) -->
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource OrangeHeaderBorder}">
                <DockPanel>
                    <TextBlock Text="ATAMALAR" Style="{StaticResource HeaderText}"/>
                    <TextBlock x:Name="TxtSelectedTeacher" Text="(Öğretmen Seçin)" Foreground="White"
                               Opacity="0.8" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="12"/>
                </DockPanel>
            </Border>

            <ListBox x:Name="AssignmentsList" Grid.Row="1"
                     BorderThickness="1,0,1,1" BorderBrush="#E5E7EB" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="6" Padding="12,10" Margin="0,3" BorderBrush="#FDBA74" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Accent bar -->
                                <Border Grid.Column="0" Width="4" Background="#F97316" Margin="0,0,12,0" CornerRadius="2"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ClassName}" FontWeight="Bold" Foreground="#9A3412" FontSize="14"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="{Binding LessonName}" FontWeight="SemiBold" FontSize="12"/>
                                        <TextBlock Text=" - " Foreground="#94A3B8" FontSize="12"/>
                                        <TextBlock Text="{Binding LessonCode}" Foreground="#64748B" FontSize="12"/>
                                        <TextBlock Text="{Binding BlockPattern, StringFormat='  ({0})'}" Foreground="#94A3B8" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Column="2" Background="#FFEDD5" CornerRadius="4" Padding="8,4" VerticalAlignment="Center" Margin="8,0,8,0">
                                    <TextBlock Text="{Binding TotalHours, StringFormat='{}{0} saat'}" FontWeight="Bold" Foreground="#C2410C" FontSize="12"/>
                                </Border>

                                <!-- Delete Button -->
                                <Button Grid.Column="3" Content="✕" Width="32" Height="32"
                                        Click="RemoveAssignment_Click" Tag="{Binding AssignmentId}"
                                        Background="Transparent" Foreground="#EF4444" FontWeight="Bold" FontSize="14"
                                        BorderThickness="0" Cursor="Hand" VerticalAlignment="Center"
                                        ToolTip="Atamayı Kaldır">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="Transparent"
                                                                CornerRadius="4" Width="32" Height="32">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FEE2E2"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Summary Footer -->
            <Border Grid.Row="2" Background="#FFF7ED" Padding="12,8" BorderBrush="#FDBA74" BorderThickness="1,0,1,1" CornerRadius="0,0,6,6">
                <DockPanel>
                    <TextBlock Text="Toplam:" FontWeight="SemiBold" Foreground="#9A3412" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTotalHours" Text="0 / 0 saat" FontWeight="Bold" Foreground="#C2410C"
                               Margin="8,0,0,0" VerticalAlignment="Center" FontSize="13"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

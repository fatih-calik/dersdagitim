<Window x:Class="DersDagitim.Views.DatabaseSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Veritabanı Seçimi" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,15">
            <TextBlock Text="Veritabanlarını Yönet" FontSize="20" FontWeight="Bold" Foreground="#1E293B"/>
            <TextBlock Text="Seçmek için çift tıklayın. İşlemler için sağ tıklayın." 
                       Foreground="#64748B" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Database Grid -->
        <ListBox x:Name="DatabaseList" Grid.Row="1" 
                  MouseDoubleClick="DatabaseList_DoubleClick"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  BorderThickness="0" Background="Transparent"
                  Margin="15,0">
            
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="6"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="130" Height="120" CornerRadius="10" 
                            BorderThickness="2" Padding="10" Background="White">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="BorderBrush" Value="#2563EB"/>
                                        <Setter Property="Background" Value="#F0F7FF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.04"/>
                        </Border.Effect>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Active Badge -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Border Background="#2563EB" CornerRadius="3" Padding="4,1" 
                                        Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="AKTİF" Foreground="White" FontSize="7" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <!-- Icon & Name -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Path Data="{StaticResource IconDatabase}" Fill="{DynamicResource PrimaryBrush}" 
                                      Width="40" Height="40" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="13" 
                                           Foreground="#1E293B"
                                           HorizontalAlignment="Center" TextAlignment="Center" MaxWidth="110" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Seç" Click="Select_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="✔️" VerticalAlignment="Center"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Çoğalt" Click="Duplicate_Click"/>
                    <MenuItem Header="Adını Değiştir" Click="Rename_Click"/>
                    <Separator/>
                    <MenuItem Header="Sil" Click="Delete_Click" Foreground="Red"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8FAFC" Padding="20,15" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <DockPanel LastChildFill="False">
                <Button Content="Yeni Veritabanı" Click="CreateNew_Click" DockPanel.Dock="Left" Padding="15,6" x:Name="BtnNewDb" />
                
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Yenile" Click="Refresh_Click" Padding="12,6" Margin="0,0,8,0"/>
                    <Button Content="Kapat" Click="Close_Click" Padding="12,6" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>

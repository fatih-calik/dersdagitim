<Window x:Class="DersDagitim.Views.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Yeni Öğretmen Ekle" Height="400" Width="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.1"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Padding="16,12" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="➕" FontSize="14" Margin="0,0,10,0"/>
                        <TextBlock Text="Yeni Öğretmen Ekle" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B"/>
                    </StackPanel>
                    <Button Content="✕" HorizontalAlignment="Right" Click="Close_Click" 
                            Background="Transparent" BorderThickness="0" Foreground="#64748B" 
                            FontSize="14" Cursor="Hand" Width="24" Height="24"/>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Border Grid.Row="1" Padding="20">
                <StackPanel>
                    
                    <!-- Adı Soyadı -->
                    <TextBlock Text="Adı Soyadı" FontSize="12" FontWeight="Medium" Foreground="#475569" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtName" Padding="10,4" Height="30" FontSize="13" BorderBrush="#E2E8F0" BorderThickness="1" 
                             Background="#F8FAFC" Margin="0,0,0,14" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- TC Kimlik No -->
                    <TextBlock Text="TC Kimlik No" FontSize="12" FontWeight="Medium" Foreground="#475569" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtTcNo" Padding="10,4" Height="30" FontSize="13" BorderBrush="#E2E8F0" BorderThickness="1" 
                             Background="#F8FAFC" Margin="0,0,0,14" MaxLength="11" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <!-- Görevi (ComboBox) -->
                    <TextBlock Text="Görevi" FontSize="12" FontWeight="Medium" Foreground="#475569" Margin="0,0,0,4"/>
                    <ComboBox x:Name="ComboPosition" Padding="10,0" Height="35" FontSize="13" Margin="0,0,0,14" 
                              SelectedValuePath="Tag" SelectedIndex="4" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Müdür" Tag="mudur"/>
                        <ComboBoxItem Content="Müd.Baş Yrd" Tag="mudurbas_yrd"/>
                        <ComboBoxItem Content="Müdür Yrd" Tag="mudur_yrd"/>
                        <ComboBoxItem Content="Müd.Pans.Yrd" Tag="mudur_pansiyon_yrd"/>
                        <ComboBoxItem Content="Öğretmen" Tag="ogretmen" IsSelected="True"/>
                        <ComboBoxItem Content="Rehberlik" Tag="rehberlik"/>
                        <ComboBoxItem Content="Formatör" Tag="formator"/>
                        <ComboBoxItem Content="Sözleşme" Tag="sozlesme"/>
                    </ComboBox>
                    
                    <!-- Branşı -->
                    <TextBlock Text="Branşı" FontSize="12" FontWeight="Medium" Foreground="#475569" Margin="0,0,0,4"/>
                    <TextBox x:Name="TxtBranch" Padding="10,4" Height="30" FontSize="13" BorderBrush="#E2E8F0" BorderThickness="1" 
                             Background="#F8FAFC" Margin="0,0,0,14" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                        <TextBox.ToolTip>Örn: Matematik, Resim, Müzik, Beden vb.</TextBox.ToolTip>
                    </TextBox>
                    

                    
                </StackPanel>
            </Border>
            
            <!-- Footer -->
            <Border Grid.Row="2" Padding="16,12" Background="#F8FAFC" CornerRadius="0,0,12,12" BorderBrush="#F1F5F9" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="İptal" Click="Close_Click" Padding="12,6" Margin="0,0,10,0"
                            Background="White" BorderBrush="#E2E8F0" BorderThickness="1" Foreground="#64748B" FontSize="12">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Kaydet" Click="Save_Click" Padding="20,6"
                            Background="#10B981" BorderThickness="0" Foreground="White" FontWeight="SemiBold" FontSize="12">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

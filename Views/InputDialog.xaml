<Window x:Class="DersDagitim.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş" Height="180" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="lblQuestion" Text="Lütfen bir değer giriniz:" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <TextBox x:Name="txtAnswer" Height="30" VerticalContentAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="İptal" Width="70" Height="25" Margin="0,0,10,0" IsCancel="True" Click="BtnCancel_Click"/>
                <Button Content="Tamam" Width="70" Height="25" IsDefault="True" Click="BtnOk_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

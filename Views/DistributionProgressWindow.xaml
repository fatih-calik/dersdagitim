<Window x:Class="DersDagitim.Views.DistributionProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dağıtım Yapılıyor" Height="380" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">

    <Window.Resources>
        <!-- Rounded button template -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main card with shadow -->
    <Border Background="White" CornerRadius="20" Margin="15"
            BorderBrush="#E2E8F0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="8" Opacity="0.10" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Progress -->
                <RowDefinition Height="*"/>     <!-- Log -->
                <RowDefinition Height="Auto"/>  <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="28,24,28,0">
                <!-- Icon -->
                <Border x:Name="IconBorder" Width="48" Height="48" CornerRadius="14">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2563EB" Offset="0"/>
                            <GradientStop Color="#7C3AED" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <!-- Spinning arrow icon (loading) -->
                    <Canvas x:Name="IconCanvas" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas.RenderTransform>
                            <RotateTransform x:Name="IconRotation" CenterX="12" CenterY="12" Angle="0"/>
                        </Canvas.RenderTransform>
                        <!-- Loading icon path -->
                        <Path x:Name="IconPath"
                              Data="M12,2 A10,10 0 0,1 21,8"
                              Stroke="White" StrokeThickness="2.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                              Fill="Transparent"/>
                    </Canvas>
                </Border>

                <!-- Title & status -->
                <StackPanel Margin="14,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Dağıtım İşlemi" FontSize="18" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock x:Name="StatusText" Text="Hazırlanıyor..."
                               FontSize="13" FontWeight="SemiBold" Foreground="#3B82F6" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- ===== PROGRESS SECTION ===== -->
            <StackPanel Grid.Row="1" Margin="28,20,28,0">
                <!-- Progress track -->
                <Border Background="#E2E8F0" CornerRadius="99" Height="8">
                    <Border x:Name="ProgressFill" CornerRadius="99" Height="8"
                            HorizontalAlignment="Left" Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop x:Name="ProgressGradStart" Color="#2563EB" Offset="0"/>
                                <GradientStop x:Name="ProgressGradEnd" Color="#7C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
                <!-- Progress info -->
                <DockPanel Margin="0,8,0,0">
                    <TextBlock x:Name="ProgressLabel" Text="Başlatılıyor"
                               FontSize="12" Foreground="#94A3B8" FontWeight="Medium"/>
                    <TextBlock x:Name="ProgressText" Text="%0"
                               FontSize="14" Foreground="#1E293B" FontWeight="Bold"
                               HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                </DockPanel>
            </StackPanel>

            <!-- ===== LOG AREA ===== -->
            <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="12"
                    Margin="28,16,28,0"
                    BorderBrush="#E2E8F0" BorderThickness="1">
                <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto" Padding="4">
                    <TextBlock x:Name="LogText" Text=""
                               Foreground="#64748B"
                               FontFamily="Consolas"
                               FontSize="11.5"
                               Padding="12,10"
                               TextWrapping="Wrap"
                               LineHeight="20"/>
                </ScrollViewer>
            </Border>

            <!-- ===== FOOTER ===== -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="28,16,28,24">
                <!-- Close button (hidden until complete) -->
                <Button x:Name="BtnClose" Content="Kapat"
                        Visibility="Collapsed"
                        Click="CloseButton_Click"
                        Style="{StaticResource ModernButton}"
                        Padding="36,10"
                        Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#2563EB" Offset="0"/>
                            <GradientStop Color="#3B82F6" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <!-- Error buttons (hidden until error) -->
                <Button x:Name="BtnCloseError" Content="Kapat"
                        Visibility="Collapsed"
                        Click="CloseButton_Click"
                        Style="{StaticResource ModernButton}"
                        Padding="24,10"
                        Foreground="#475569"
                        Background="#F1F5F9"
                        Margin="0,0,10,0"/>
                <Button x:Name="BtnRetry" Content="Tekrar Dene"
                        Visibility="Collapsed"
                        Click="RetryButton_Click"
                        Style="{StaticResource ModernButton}"
                        Padding="24,10"
                        Foreground="White"
                        Background="#EF4444"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
